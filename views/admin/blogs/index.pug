extends ../../layout
block content
    .blog
        .topbar
            h1 Blog pannel
            .flex
                .btn create new post
                .stats
                    div=blogs.length+" posts"
        .blog-content
                each blog in blogs
                    .card
                         img(src="/images/" + blog.image)
                         h2=blog.title
                         h4="author : "+blog.author.username
                         div
                            if blog.author._id = currentUser._id
                                .btn edit
                            .btn delete

